<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/linear_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:text="Nutricare Baby"
        android:textColor="#1A237E "
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/emailEditText"
        android:textColor="@color/black"
        android:textColorHint="@color/textColor2"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/icono_mail"
        android:drawablePadding="8dp"
        android:hint="Correo electrónico" />

    <EditText
        android:id="@+id/passwordEditText"
        android:textColor="@color/black"
        android:textColorHint="@color/textColor2"
        android:backgroundTint="@color/black"
        android:drawableStart="@drawable/icono_pass"
        android:drawablePadding="8dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerButton"
        android:background="@drawable/boton_weno"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Registrar" />

    <TextView

        android:text="Salir"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:background="@drawable/rounded_textview4"
        android:onClick="mtdIrLogin"

        android:layout_gravity="center"
        android:paddingHorizontal="100dp"
        android:paddingVertical="10sp"
        android:layout_marginTop="30dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</LinearLayout>